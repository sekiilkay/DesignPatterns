@using DesignPattern.CQRS.CQRS.Results
@model List<GetProductQueryResult>

@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Getir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price ₺</td>
                <td>@item.Stock</td>
                <td><a href="/Default/GetProduct/@item.Id" class="btn btn-dark">Getir</a></td>
                <td><a href="/Default/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Default/UpdateProduct/@item.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Default/AddProduct" class="btn btn-success">Yeni Ürün Girişi</a>
</div>