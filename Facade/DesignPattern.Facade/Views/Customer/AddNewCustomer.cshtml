@using DesignPattern.Facade.DAL
@model Customer

@{
    ViewData["Title"] = "AddNewCustomer";
    Layout = "~/Views/Shared/_FacadeLayout.cshtml";
}

<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" class="form-control" asp-for="Name"/>
    <br />

    <label>Müşteri Soyadı</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />

    <label>Müşteri Adresi</label>
    <input type="text" class="form-control" asp-for="Address" />
    <br />

    <label>Müşteri Şehri</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>
