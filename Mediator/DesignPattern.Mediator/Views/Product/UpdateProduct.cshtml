@using DesignPattern.Mediator.Mediator.Results
@model UpdateProductByIdQueryResult

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <label>Ürün Id</label>
        <input type="text" asp-for="Id" class="form-control" />
        <br />

        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />

        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />

        <label>Ürün Stok Türü</label>
        <input type="text" asp-for="StockType" class="form-control" />
        <br />

        <label>Ürün Stok Sayısı</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />

        <label>Ürün Kategori</label>
        <input type="text" asp-for="Category" class="form-control" />
        <br />
   
        <button class="btn btn-primary">Ürünü Güncelle</button>
    </form>
</div>